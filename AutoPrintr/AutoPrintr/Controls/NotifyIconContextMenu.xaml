<UserControl x:Class="AutoPrintr.Controls.NotifyIconContextMenu"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.ContextMenu>
        <ContextMenu Placement="MousePoint">
            <MenuItem Header="Login" Click="LoginMenuItem_Click" />
            <MenuItem Header="Jobs" Click="JobsMenuItem_Click" />
            <MenuItem Header="Settings" Click="SettingsMenuItem_Click" />
            <MenuItem Header="Logout" Click="LogoutMenuItem_Click" />
            <MenuItem Header="Exit" Click="ExitMenuItem_Click" />
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>