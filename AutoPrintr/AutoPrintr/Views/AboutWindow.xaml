<Window x:Class="AutoPrintr.Views.AboutWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="AutoPrintr About"
        WindowStartupLocation="CenterScreen"
        Icon="/AutoPrintr;component/Resources/Printer_32.png"
        Height="600"
        Width="800">

    <ScrollViewer>
        <TextBlock x:Name="DescriptionTextBlock" Margin="20" TextWrapping="Wrap">
            <Run Text="{Binding Licence, Mode=OneTime}" />
            <LineBreak />
            <LineBreak />
            <Run Text="{Binding About, Mode=OneTime}" />
        </TextBlock>
    </ScrollViewer>
</Window>