<Window x:Class="AutoPrintr.Views.SettingsWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoPrintr Settings"
        WindowStartupLocation="CenterScreen"
        Height="600"
        Width="800">

    <Window.Resources>
        <DataTemplate x:Key="LocationItemTemplate">
            <CheckBox Content="{Binding Name}" IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsSelected}" />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.7*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Margin="20,15,20,0" Text="Locations" FontSize="18" Style="{StaticResource HeaderTextBlockStyle}" />
        <ListView Grid.Row="1"
                  Margin="20,10,10,10"
                  SelectionMode="Multiple"
                  ItemsSource="{Binding Locations}"
                  ItemTemplate="{StaticResource LocationItemTemplate}"
                  DataContextChanged="ListView_DataContextChanged"
                  SelectionChanged="ListView_SelectionChanged" />

        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" Margin="-3,10,0,10" HorizontalAlignment="Left" />

        <TextBlock Grid.Column="1" Margin="20,15,20,0" Text="Printers" FontSize="18" Style="{StaticResource HeaderTextBlockStyle}" />
        <ListView Grid.Row="1" Grid.Column="1" Margin="10,10,20,10" SelectionMode="Multiple" />
    </Grid>
</Window>